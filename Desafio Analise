# x_n+1 = 1/2(x_n + a/x_n)
a = 5 #como lim xn = b, e b = sqrt(a), então, a sequencia se aproxima da raiz de a 
termos = 20
xn = zeros(termos)
xn[1] = rand(1:100) #gera numero aleatoro entre 1 e 100
for n ∈ 2:termos 
  xn[n] = 0.5*(xn[n-1]+ a/xn[n-1])
end

for n ∈ 1:termos
    println("x[$n] = ", xn[n])
end
